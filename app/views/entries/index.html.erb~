<% content_for :sidebar do %>
  <ul>
    <li><%= link_to 'Alle Blogs', blogs_path %></li>
    <% unless @blog.nil? %>
      <li><%= link_to "#{@blog.owner}'s Home", user_home_path(@blog.owner) %></li>
    <% end %>
    <% if @blog.nil? || @blog.owner != @user  and @user %>
      <li><%= link_to "#{@user}'s Home", user_home_path(@user) %></li>
    <% end %>
  </ul>
<% end %>

<%= will_paginate @entries %>

<% if @blog %>
  <p><%= link_to image_tag('add.png') + ' New entry', new_blog_entry_path(@blog) %></p>
<% end %>

