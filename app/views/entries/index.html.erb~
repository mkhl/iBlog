<% previous_date = 'abc' %>
<% @entries.each do |entry| %>
  <% if entry.created_at.to_date != previous_date %>
    <% previous_date = entry.created_at.to_date %>
    <div class="day_separator">
      <h2><%= l entry.created_at.to_date %></h2>
    </div>
  <% end %>

  <div class="blogpost">
    <h2><%=h entry.title %></h2>
    <p class="permalink">[<%= link_to 'Permalink', blog_entry_path( entry.blog_id, entry ) %>]</p>

    <div class="excerpt"><%=h entry.excerpt %></div>
      <div class="body">

        <h3>Folgende Dinge habe ich gestern/heute erreicht:</h3>
        <div style="margin-left: 10px;"><%= textilize entry.progress %></div>

        <h3>Ich plane heute zu tun:</h3>
        <div style="margin-left: 10px;"><%= textilize entry.plans %></div>

        <% if !entry.problems.nil? && entry.problems.size > 0 %>
          <h3>Ich habe folgende Probleme, die ich ohne Hilfe nicht l√∂sen kann.</h3>
          <div style="margin-left: 10px;"><%= textilize entry.problems %></div>
        <% else %>
          <p><strong>Aktuell habe ich alle Probleme im Griff.</strong></p>
        <% end %>
      </div>
      <p>
        <span class="date"><%= l entry.created_at, :format => :short %></span> |
        <span class="author"><%=link_to entry.author, user_home_path(:author => entry.author) %></span> |
        <span class="tags">Tags: <%= tags(entry) %></span>
        <span class="comments">Kommentare: <%#=h entry.comments_count %></span>
      </p>
    </div>

    <% if entry.author == @user -%>
      <p class="edit_post"><%= link_to image_tag('edit.png') + ' Edit', edit_blog_entry_path(entry.blog_id, entry) %></p>
    <% end %>
  </div>
<% end %>

