<% if @preview %>
  <article class="post preview">
    <h2><%= weekly_status.title %></h2>
<% else %>
  <article class="post">
    <h2>
      <%= link_to weekly_status.title, weekly_status %>
      <% if weekly_status.owned_by?(@user) %>
        <span class="pull-right">
          <%= link_to glyph(:edit), edit_weekly_status_path(weekly_status), :class => "btn" %>
          <%= link_to glyph(:delete, true), weekly_status, :method => :delete, :class => "btn btn-danger" %>
        </span>
      <% end %>
    </h2>
<% end %>

  <%= format_entry_section(weekly_status.status_html) %>

  <% unless @preview %>
    <ul class="breadcrumb entry-meta">
      <li><%= avatar(weekly_status.author) %><%= link_to weekly_status.author, weekly_statuses_by_author_path(:author => weekly_status.author) %></li>
      <li>Erstellt am <%= l weekly_status.created_at, :format => :short %></li>
      <li class="divider-vertical"></li>
      <% if weekly_status.created_at != weekly_status.updated_at %>
        <li><strong>Ge√§ndert am <%= l weekly_status.updated_at, :format => :short %></strong></li>
        <li class="divider-vertical"></li>
      <% end %>
      <li class="divider-vertical"></li>
      <li>Kommentare: <%= link_to weekly_status.comments.count, weekly_status %></li>
    </ul>
  <% end %>
</article>
